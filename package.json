    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.4.6",
    "handlebars": "4.7.8",
    "highlight.js": "^11.10.0",
    "masonry-layout": "^4.2.2",
    "sortablejs": "^1.15.6",
    "tinymce": "^6.8.5",
    "vanilla-cookieconsent": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
