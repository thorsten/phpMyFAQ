    <h1 class="h2">
      <i aria-hidden="true" class="bi bi-pencil"></i>
      {{ ad_news_data }}
    </h1>
  </div>

  <div class="row">
    <div class="col-12">
      {% if statusUpdateNews == true %}
        <div class="alert alert-success alert-dismissible fade show">{{ ad_news_updatesuc }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {% else %}
        <div class="alert alert-danger alert-dismissible fade show">{{ ad_news_insertfail }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      {% endif %}
      <div class="row">&rarr; <a href="?action=news">{{ msgNews }}</a>
      </div>
    </div>
    {% endif %}
    {% if action == 'delete-news' and permissionDeleteNews == true %}
    <div
      class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">
        <i aria-hidden="true" class="bi bi-pencil"></i>
        {{ ad_news_data }}
      </h1>
    </div>

    <div class="row">
      <div class="col-12">
        {% if precheck == 'no' %}
        <div class="row">{{ ad_news_del }}</div>
        <div class="text-center">
          <form action="?action=delete-news" method="post" accept-charset="utf-8">
            <input type="hidden" name="id" value="{{ deleteId }}">
            <input type="hidden" name="really" value="yes">
            <input type="hidden" name="pmf-csrf-token" id="pmf-csrf-token" value="{{ csrfToken_deleteNews }}" />
            <button class="btn btn-warning" type="submit" name="submit">
              {{ ad_news_yesdelete }}
            </button>
            <a class="btn btn-inverse" onclick="history.back();">
              {{ ad_news_nodelete }}
            </a>
          </form>
        </div>
        {% else %}
        {% if verifyCsrf_deleteNews == true %}
        <div class="alert alert-success alert-dismissible fade show">{{ ad_news_delsuc }}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="row">&rarr; <a href="?action=news">{{ msgNews }}</a>
          {% endif %}
          {% endif %}
          {% endif %}
