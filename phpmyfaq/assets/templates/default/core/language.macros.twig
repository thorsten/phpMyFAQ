{#
 # Renders language options for select dropdowns
 #
 # @param languages array Array of languages with code as key and name as value
 # @param selectedLanguage string The selected language code (optional)
 #}
{% macro renderLanguageOptions(languages, selectedLanguage) %}
    {% for code, name in languages %}
        <option value="{{ code }}"{% if code == selectedLanguage|lower %} selected{% endif %}>{{ name }}</option>
    {% endfor %}
{% endmacro %}
